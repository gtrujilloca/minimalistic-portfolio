---
import type { Project } from "@/types";
import Section from "@/components/Section.astro";

interface Props {
  projects: Project[];
  title: string;
}

const { projects, title } = Astro.props;
---

<Section title={title}>
  <ul>
    {
      projects.map(({ name, url, description, highlights }) => (
        <li>
          <article>
            <header>
              <a href={url} target="_blank" rel="noopener noreferrer">
                <h3>{name}</h3>
              </a>
              <p>{description}</p>
            </header>
            <footer>
              {highlights.map((highlight) => (
                <span>{highlight}</span>
              ))}
            </footer>
          </article>
        </li>
      ))
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1rem;
    list-style: none;
    article {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      border-radius: 6px;
      padding: 1rem;
      border: 1px solid #f2f2f2;
      height: 100%;

      h3 {
        margin-bottom: 6px;
      }

      header {
        flex: 1;

        a {
          color: #111;
          &:hover {
            text-decoration: underline;
          }
        }

        p {
          font-size: 0.75rem;
          line-height: 1.2;
          margin-bottom: 4px;
        }
      }


    }

    footer {
      display: inline-flex;
      flex-wrap: wrap;
      gap: 0.4rem;
      font-size: 0.6rem;

      span {
        border-radius: 6px;
        background-color: #eee;
        color: #444;
        font-size: 0.65rem;
        font-weight: 500;
        padding: 0.2rem 0.6rem;
      }
    }
  }
</style>
